<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.job_centre">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Applicants"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Job_Centre">
        <activity android:name=".Window"></activity>
        <activity android:name=".Resume" />
        <activity android:name=".Applicant" />
        <activity android:name=".Log_in" />
        <activity android:name=".Registration" />
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>